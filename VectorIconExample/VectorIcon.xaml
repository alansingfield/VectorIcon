<UserControl x:Class="Didsbury.VectorIconExample.VectorIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Didsbury.VectorIconExample"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DataContext="{d:DesignInstance {x:Type local:VectorIcon}, IsDesignTimeCreatable=True}">
  <Viewbox>
    <Canvas Width="{Binding PathWidth}" Height="{Binding PathHeight}">
      <Path Data="{Binding Geometry}" 
            Fill="{Binding Foreground}"/>
    </Canvas>
  </Viewbox>
</UserControl>
